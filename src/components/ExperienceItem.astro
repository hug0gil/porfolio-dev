---
interface Props {
  title: string;
  description: string;
  company: string;
  date: string;
  link?: string; //? para poner que es opcional
}
const { title, description, company, link, date } = Astro.props;
---

<div
  class="absolute w-3 h-3 bg-red-300/80 rounded-full mt-1.5 -start-1.5 border border-red-300"
>
</div>
<time class="text-sm font-normal leading-none text-gray-400">{date}</time>
<h3 class="mt-4 text-xl font-semibold text-red-300/85">
  {title}
</h3>
<h3 class="mb-4 mt-1 text-sm font-semibold text-red-300/70">
  {company}
</h3>
<p class="mb-5 text-base font-normal text-white/80 text-pretty">
  {description}
</p>
{
  link && (
    <a
      href={link}
      target="_blank"
      class="inline-flex items-center px-4 py-2 text-sm font-medium
      border rounded-lg focus:z-10 focus:ring-4 focus:outline-none  focus:text-blue-700
     text-gray-400 border-gray-600 hover:text-white hover:bg-gray-700 transition"
    >
      Saber m√°s ...{" "}
      <svg
        class="w-3 h-3 ms-2 rtl:rotate-180"
        aria-hidden="true"
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 14 10"
      >
        <path
          stroke="currentColor"
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M1 5h12m0 0L9 1m4 4L9 9"
        />
      </svg>
    </a>
  )
}
